{
  "appId": "com.linkband.sdk",
  "directories": {
    "output": "release",
    "buildResources": "resources"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "resources/**/*"
  ],
  "extraResources": [
    {
      "from": "python_core",
      "to": "python_core",
      "filter": ["**/*"]
    },
    {
      "from": "resources",
      "to": "resources",
      "filter": ["**/*"]
    }
  ],
  "mac": {
    "target": ["dmg"],
    "icon": "resources/icon.icns"
  },
  "win": {
    "target": ["nsis"],
    "icon": "resources/icon.ico"
  },
  "linux": {
    "target": ["AppImage"],
    "icon": "resources/icon.png"
  }
} 