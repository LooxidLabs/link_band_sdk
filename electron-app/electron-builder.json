{
  "appId": "com.linkband.sdk",
  "productName": "Link Band SDK",
  "directories": {
    "output": "release",
    "buildResources": "resources"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "resources/**/*"
  ],
  "extraResources": [
    {
      "from": "../python_core",
      "to": "python_core",
      "filter": ["**/*"]
    },
    {
      "from": "../venv/lib/python3.13/site-packages",
      "to": "python_core/venv/lib/python3.13/site-packages",
      "filter": [
        "fastapi/**/*",
        "uvicorn/**/*",
        "starlette/**/*",
        "pydantic/**/*",
        "pydantic_core/**/*",
        "websockets/**/*",
        "bleak/**/*",
        "numpy/**/*",
        "heartpy/**/*",
        "psutil/**/*",
        "h11/**/*",
        "httpcore/**/*",
        "httpx/**/*",
        "anyio/**/*",
        "sniffio/**/*",
        "certifi/**/*",
        "idna/**/*",
        "click/**/*",
        "typing_extensions/**/*",
        "annotated_types/**/*",
        "!**/__pycache__/**",
        "!**/*.pyc",
        "!**/*.pyo",
        "!**/.pytest_cache/**",
        "!**/tests/**",
        "!**/test/**",
        "!**/*test*/**"
      ]
    },
    {
      "from": "../venv/bin",
      "to": "python_core/venv/bin",
      "filter": ["python*"]
    },
    {
      "from": "resources",
      "to": "resources",
      "filter": ["**/*"]
    }
  ],
  "publish": [
    {
      "provider": "github",
      "owner": "Brian-Chae",
      "repo": "link_band_sdk"
    }
  ],
  "mac": {
    "icon": "build/icons/mac/icon.icns",
    "category": "public.app-category.developer-tools",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "hardenedRuntime": false,
    "gatekeeperAssess": false,
    "entitlements": "resources/entitlements.mac.plist",
    "entitlementsInherit": "resources/entitlements.mac.plist",
    "notarize": false,
    "identity": null
  },
  "win": {
    "icon": "build/icons/win/icon.ico",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ]
  },
  "nsis": {
    "installerIcon": "build/icons/win/icon.ico",
    "uninstallerIcon": "build/icons/win/icon.ico",
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Utility"
  }
} 