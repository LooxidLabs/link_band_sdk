{
  "appId": "com.looxidlabs.linkbandsdk",
  "productName": "Link Band SDK",
  "directories": {
    "output": "release",
    "buildResources": "resources"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "public/**/*",
    "!public/docs/**/*"
  ],
  "extraResources": [
    {
      "from": "../python_core",
      "to": "python_core",
      "filter": ["**/*", "!**/__pycache__/", "!**/*.pyc", "!**/dist/**", "!**/build/**"]
    },
    {
      "from": "public/docs",
      "to": "docs"
    },
    {
      "from": "resources",
      "to": "resources"
    }
  ],
  "asarUnpack": [
    "**/*.node",
    "**/python_core/**/*"
  ],
  "publish": [
    {
      "provider": "github",
      "owner": "Brian-Chae",
      "repo": "link_band_sdk"
    }
  ],
  "mac": {
    "icon": "build/icons/mac/icon.icns",
    "category": "public.app-category.developer-tools",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "resources/entitlements.mac.plist",
    "entitlementsInherit": "resources/entitlements.mac.plist",
    "notarize": false,
    "identity": "Apple Development: yongwook.chae@icloud.com (AYR86268A3)"
  },
  "win": {
    "icon": "build/icons/win/icon.ico",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ]
  },
  "nsis": {
    "installerIcon": "build/icons/win/icon.ico",
    "uninstallerIcon": "build/icons/win/icon.ico",
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Utility"
  }
} 