{
  "appId": "com.linkband.sdk",
  "productName": "Link Band SDK",
  "directories": {
    "output": "release",
    "buildResources": "resources"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "resources/**/*",
    "public/docs/**/*"
  ],
  "extraResources": [
    {
      "from": "../python_core",
      "to": "python_core",
      "filter": [
        "**/*",
        "!**/__pycache__/",
        "!**/*.pyc",
        "!**/tests/",
        "!**/test/",
        "!**/testing/",
        "!**/test_data/",
        "!**/temp_exports/",
        "!**/data/session_*/"
      ]
    },
    {
      "from": "../venv/lib/python3.13/site-packages",
      "to": "python_core/venv/lib/python3.13/site-packages",
      "filter": [
        "**/*",
        "!**/__pycache__/",
        "!**/*.pyc",
        "!**/tests/",
        "!**/test/",
        "!**/testing/",
        "!**/test_data/",
        "!**/scipy/io/matlab/tests/**",
        "!**/numpy/tests/**",
        "!**/pandas/tests/**",
        "!**/pytest/**",
        "!**/setuptools/**",
        "!**/pip/**",
        "!**/wheel/**",
        "!**/distutils/**",
        "!**/ensurepip/**"
      ]
    },
    {
      "from": "resources",
      "to": "resources",
      "filter": ["**/*"]
    },
    {
      "from": "public/docs",
      "to": "docs",
      "filter": ["**/*"]
    }
  ],
  "publish": [
    {
      "provider": "github",
      "owner": "Brian-Chae",
      "repo": "link_band_sdk"
    }
  ],
  "mac": {
    "icon": "build/icons/mac/icon.icns",
    "category": "public.app-category.developer-tools",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "hardenedRuntime": false,
    "gatekeeperAssess": false,
    "entitlements": "resources/entitlements.mac.plist",
    "entitlementsInherit": "resources/entitlements.mac.plist",
    "notarize": false,
    "identity": null
  },
  "win": {
    "icon": "build/icons/win/icon.ico",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ]
  },
  "nsis": {
    "installerIcon": "build/icons/win/icon.ico",
    "uninstallerIcon": "build/icons/win/icon.ico",
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Utility"
  }
} 